Import('RTT_ROOT')
Import('rtconfig')
from building import *

cwd     = GetCurrentDir()

# add the general drivers.
src = Split("""
   application.c
   cmu_cmd.c
   test.c
   startup.c
   delay.c
   wdt.c
   start_gcc.S
""")

# ulog
if GetDepend(['RT_USING_ULOG']):
	src +=['ulog_port.c']

# Ymoden
if GetDepend(['RT_USING_RYM']):
	src +=['ymodem_port.c']

# USBD
if GetDepend(['RT_USING_USB_DEVICE']):
	src +=['ymodem4usb.c']

CPPPATH = [cwd]

group = DefineGroup('Applications', src, depend = [''], CPPPATH = CPPPATH)

Return('group')
